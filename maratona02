<?php
//Verificar se o número se é positivo ou negativo
$numero = -5;

if ($numero > 0) {
    echo "O número é positivo";
} elseif ($numero < 0) {
    echo "O número é negativo";
} else {
    echo "O número é zero";
}

echo "<br>";

//Classificação da nota do estudante

$nota = 8.7;

if ($nota >= 0 && $nota <= 4.9) {
    echo "Reprovado";
} elseif ($nota >= 5 && $nota <= 6.9) {
    echo "Recuperação";
} elseif ($nota >= 7 && $nota <= 8.9) {
    echo "Aprovado";
} elseif ($nota >= 9 && $nota <= 10) {
    echo "Aprovado com Distinção";    
} else {
    echo "Nota inválida";
}

echo "<br>";

//Verificar se pode votar

$idade = 16;

if ($idade < 16) {
    echo "Não pode votar";
} elseif ($idade >= 16 && $idade <= 17) {
    echo "Pode votar (Não é obrigatório)";
} else
    echo "Pode votar (Obrigatório)";

echo "<br>";

//Verificar se o número é par ou ímpar

$numero = 11;

if ($numero % 2 == 0) {
    echo "O número é par";
} else {
    echo "O número é ímpar";
}

echo "<br>";

//Preço do ingresso de cinema baseado no horário

$horario = 19;

if ($horario >= 10 && $horario <= 12) {
    echo "Preço do ingresso: R$ 10,00 (Matinal)";
} elseif ($horario >=12.01 && $horario <= 17) {
    echo "Preço do ingresso: R$ 20,00 (Diurno)";
} elseif ($horario >=17.01 && $horario <= 22) {
    echo "Preço do ingresso: R$ 30,00 (Noturno)";
} elseif ($horario >=22.01 && $horario <= 23.59) {
    echo "Preço do ingresso: R$ 40,00 (Última sessão)";
} else {
    echo "Horário inválido";
}

echo "<br>";

//Determinar o dia da semana

$numero2 = 3;

switch ($numero2) {
    case 1:
        echo "Domingo";
        break;
    case 2;
        echo "Segunda-feira";
        break;
    case 3:
        echo "Terça-feira";
        break;
    case 4:
        echo "Quarta-feira";
        break;
    case 5:
        echo "Quinta-feira";
        break;
    case 6:
        echo "Sexta-feira";
        break;
    case 7:
        echo "Sábado";
        break;
    default:
        echo "Número inválido! Digite de 1 a 7.";
}

echo "<br>";

//Categoria do estudante pela nota

$nota = 7.5;

switch (true) {
    case ($nota >= 0 && $nota <= 4.9):
        echo "Reprovado";
        break;

    case ($nota >= 5 && $nota <= 6.9):
        echo "Recuperação";
        break;
    
    case ($nota >= 7 && $nota <= 10):
        echo "Aprovado";
        break;

    default:
        echo "Nota inválida!";

echo "<br>";

//Preço final com código de desconto

$preco = 100;
$codigo = 2;

switch ($codigo) {
    case 1:
        $desconto = 0.10;
        break;
    
    case 2:
        $desconto = 0.20;
        break;
    
    case 3:
        $desconto = 0.30;
        break;

    default:
        die("Código de desconto inválido!");
}

$precoFinal = $preco - ($preco * $desconto);

echo "Preço original: R$ $preco<br>";
echo "Preço com desconto: R$ $precoFinal";

echo "<br>";

//Criar array com nomes de 5 amigos

$amigos = [];

for ($i = 1; $i <= 5; $i++) {
    $amigos[] = "Amigo $i";
}

echo "<pre>";
print_r($amigos);
echo "</pre>";

echo "<br>";

//Remover o segundo elemento de um array

$array = [10, 20, 30, 40, 50];

unset($array[1]);

$array = array_values($array);

print_r($array);

echo "<br>";

//Contar números pares em um array

$numeros = [];

for ($i = 0; $i , 10; $i++) {
    $numeros[] = rand(1, 100);
}

$pares = 0;

foreach ($numeros as $n) {
    if ($n % 2 == 0) {
        $pares++;
    }  
}

echo "Números: ";
print_r($numeros);

echo "<br>Total de pares: $pares";

echo "<br>";

//Combinar dois arrays

$array1 = [1, 2, 3, 4, 5];
$array2 = [6, 7, 8, 9, 10];

$arrayFinal = array_merge($array1, $array2);

print_r($arrayFinal);

?>
    
